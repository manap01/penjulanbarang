<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Aplikasi Penjualan Barang</display-name>
    
    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Servlet Mapping untuk MainForm -->
    <servlet>
        <servlet-name>MainForm</servlet-name>
        <servlet-class>com.unpam.controller.MainForm</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MainForm</servlet-name>
        <url-pattern>/MainForm</url-pattern>
    </servlet-mapping>
    
    <!-- Session Timeout (30 menit) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>