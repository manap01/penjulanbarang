<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" 
              name="LaporanTransaksi" pageWidth="595" pageHeight="842" columnWidth="555" 
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">
    
    <queryString>
        <![CDATA[SELECT t.*, c.nama_customer, b.nama_barang 
                 FROM tbtransaksi t 
                 LEFT JOIN tbcustomer c ON t.id_customer = c.id_customer 
                 LEFT JOIN tbbarang b ON t.kode_barang = b.kode_barang 
                 ORDER BY t.no_transaksi DESC]]>
    </queryString>
    
    <field name="no_transaksi" class="java.lang.String"/>
    <field name="tanggal" class="java.sql.Date"/>
    <field name="nama_customer" class="java.lang.String"/>
    <field name="nama_barang" class="java.lang.String"/>
    <field name="jumlah" class="java.lang.Integer"/>
    <field name="total_harga" class="java.lang.Double"/>
    
    <variable name="total_keseluruhan" class="java.lang.Double" calculation="Sum">
        <variableExpression><![CDATA[$F{total_harga}]]></variableExpression>
    </variable>
    
    <title>
        <band height="79" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[LAPORAN TRANSAKSI PENJUALAN]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="35" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12"/>
                </textElement>
                <text><![CDATA[Aplikasi Penjualan Barang]]></text>
            </staticText>
            <line>
                <reportElement x="0" y="60" width="555" height="1"/>
            </line>
        </band>
    </title>
    
    <columnHeader>
        <band height="30" splitType="Stretch">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="90" height="30" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="8"/>
                </textElement>
                <text><![CDATA[No Transaksi]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="90" y="0" width="70" height="30" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="8"/>
                </textElement>
                <text><![CDATA[Tanggal]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="160" y="0" width="110" height="30" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="8"/>
                </textElement>
                <text><![CDATA[Customer]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="270" y="0" width="110" height="30" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="8"/>
                </textElement>
                <text><![CDATA[Barang]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="380" y="0" width="50" height="30" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="8"/>
                </textElement>
                <text><![CDATA[Jumlah]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="430" y="0" width="125" height="30" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="8"/>
                </textElement>
                <text><![CDATA[Total Harga]]></text>
            </staticText>
        </band>
    </columnHeader>
    
    <detail>
        <band height="25" splitType="Stretch">
            <textField>
                <reportElement x="0" y="0" width="90" height="25"/>
                <box leftPadding="3">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{no_transaksi}]]></textFieldExpression>
            </textField>
            <textField pattern="dd/MM/yyyy">
                <reportElement x="90" y="0" width="70" height="25"/>
                <box leftPadding="3">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{tanggal}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="160" y="0" width="110" height="25"/>
                <box leftPadding="3">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{nama_customer}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="270" y="0" width="110" height="25"/>
                <box leftPadding="3">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{nama_barang}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="380" y="0" width="50" height="25"/>
                <box leftPadding="3">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{jumlah}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="430" y="0" width="125" height="25"/>
                <box leftPadding="3">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Rp " + $F{total_harga}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
    
    <summary>
        <band height="30" splitType="Stretch">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="430" height="30" backcolor="#EEEEEE"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[TOTAL KESELURUHAN:  ]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement mode="Opaque" x="430" y="0" width="125" height="30" backcolor="#EEEEEE"/>
                <box leftPadding="3">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Rp " + $V{total_keseluruhan}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
    
    <pageFooter>
        <band height="30" splitType="Stretch">
            <textField>
                <reportElement x="455" y="5" width="100" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Halaman " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
    
</jasperReport>